@using FitnessSimulation.Models

@model TrainerCreateVM
<div class="container mt-4">

	<div class="row">
        <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="FullName">Fullname</label>
                <input asp-for="FullName"  placeholder="Enter FullName">
               <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Experience">Experience</label>
                    <input asp-for="Experience" placeholder="Enter Experience">
                    <span asp-validation-for="Experience" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="Image">Image</label>
                <input asp-for="Image" placeholder="Enter Image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <select asp-for="CategoryId" style="width:100px">
                @foreach(Category category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select><br />
          
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </div>
	</div>
</div>